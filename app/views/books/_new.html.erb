<p id="notice"></p>
<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to "<i class='fas fa-user-cog'></i>".html_safe, edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: books do |f| %>
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "form-control book_title" %>
    <label for="book_body">Opinion</label><br>
    <%= f.text_area :body, class: "form-control" %><br>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
</div>
