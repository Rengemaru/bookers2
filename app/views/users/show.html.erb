<%= @book.errors.count %>errors prohibited this obj from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to "<i class='fas fa-user-cog'></i>".html_safe, edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control" %>
        <label for="book_body">Opinion</label><br>
        <%= f.text_area :body, class: "form-control" %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |post| %>
            <tr>
              <td></td>
              <td><%= link_to post.title, book_path(post) %></td>
              <td><%= post.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>